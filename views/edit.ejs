<%- include("partials/header.ejs") %>

<main>
  <div id="editor">
    <h1>Edit Blog</h1>
    <form action="/edited/<%= blog.id %>" method="POST">
      <div id="titAuth">
        <div class="form-group">
          <label for="title" class="form-label">Blog Title</label>
          <input type="text" id="title" name="title" class="form-control" value="<%- blog.title %>" required>
        </div>
        <div class="form-group">
          <label for="author" class="form-label">Author</label>
          <input type="text" id="author" name="author" class="form-control" value="<%- blog.author %>" required>
        </div>
      </div>
      <div class="form-group">
        <label for="content" class="form-label">Content</label>
        <textarea id="content" name="content" class="form-control" required><%= blog.content.trim() %></textarea>
      </div>
      <button id="editSubmit" type="submit">Update Blog</button>
    </form>
  </div>
</main>

<%- include("partials/footer.ejs") %>