<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Add fade-in class to blog entries for animation
    const blogItems = document.querySelectorAll('.blogCont');
    blogItems.forEach(item => {
      item.classList.add('fade-in');
    });

    // Add fade-in class to single blog view
    const singleBlog = document.querySelector('.snlBlogCont');
    if (singleBlog) {
      singleBlog.classList.add('fade-in');
    }
  });
</script>
