<%- include("partials/header.ejs") %>

<main>
  <article class="snlBlogCont">
    <h1 class="blogTitle"><%= blog.title %></h1>
    <h4 class="blogAuthor"><%= blog.author %></h4>
    <div class="blogContent">
      <%= blog.content %>
    </div>
    <div id="edlCont">
      <a href="/edit/<%= blog.id %>">
        <button class="btn btn-secondary" type="button">✏️ Edit</button>
      </a>
      <form action="/delete" method="POST">
        <input type="hidden" name="id" value="<%= blog.id %>">
        <button class="btn btn-danger" type="submit">🗑️ Delete</button>
      </form>
    </div>
  </article>
</main>

<%- include("partials/footer.ejs") %>